@model IEnumerable<User>
@{
    if (User.IsInRole("Manager"))
    {
        ViewData["Title"] = "Users";
        Layout = "_Layout - loggedManager";
    }
    else if (User.IsInRole("Admin"))
    {
        ViewData["Title"] = "Users";
        Layout = "_Layout - loggedAdmin";
    }
}



<div class="text-center">
    <h1 class="display-4">Users list</h1>
</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Resource list</h2>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.FirstName
                </td>
                <td width="20%">
                    @obj.LastName
                </td>
                <td width="20%">
                    @obj.Email
                </td>
                <td width="20%">
                    @obj.PhoneNumber
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-asp-controller="Users" asp-action="EditUser" asp-route-id="@obj.Id"> <i class="bg-info bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-asp-controller="Users" asp-action="DeleteUser" asp-route-id="@obj.Id"> <i class="bg-info bi-pencil-square"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
